{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "fileExtensions": ["js", "ts"]
  },
  "module-alias": {
    "register": "./node_modules/module-alias/index.js"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}